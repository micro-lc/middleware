{
  "name": "@micro-lc/middleware",
  "version": "2.0.0",
  "description": "micro-lc configuration server",
  "license": "SEE LICENSE IN LICENSE",
  "packageManager": "yarn@3.3.1",
  "bin": "./dist/cli/index.js",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "postinstall": "husky install",
    "lint": "eslint ./src --ext .ts",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' ts-mocha",
    "coverage": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' nyc ts-mocha",
    "clean": "rimraf dist",
    "build:server": "tsc --project ./scripts/tsconfig.build.json && echo \"✔ server compiled successfully\"",
    "build:cli": "yarn node ./scripts/build-cli.mjs",
    "build:sdk-types": "tsc --project ./scripts/tsconfig.types.json",
    "build:sdk-esm": "tsc --project ./scripts/tsconfig.esm.json",
    "build:sdk": "run-p build:sdk-types build:sdk-esm && echo \"✔ sdk compiled successfully\"",
    "build": "run-p build:server build:cli build:sdk",
    "bump": "bash ./scripts/version.sh",
    "start": "lc39 dist/server.js",
    "start:local": "yarn start --env-path ./default.env --log-level trace --port 3001",
    "cli": "yarn ts-node ./src/cli",
    "prepublish": "pinst --disable"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.1.0",
    "@mia-platform/custom-plugin-lib": "^5.1.5",
    "ajv": "^8.11.2",
    "commander": "^9.4.1",
    "fast-json-patch": "^3.1.1",
    "glob": "^8.0.3",
    "js-yaml": "^4.1.0",
    "jsonpath-plus": "^7.2.0",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@mia-platform/lc39": "^6.0.2",
    "@micro-lc/interfaces": "^1.0.1",
    "@micro-lc/layout": "^1.0.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/glob": "^8.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mkdirp": "^1.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.17",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "confusing-browser-globals": "^1.0.11",
    "esbuild": "^0.16.10",
    "eslint": "^8.30.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-visitor-keys": "^3.3.0",
    "fastify": "^4.10.2",
    "husky": "^8.0.2",
    "json-schema-to-ts": "^2.6.2",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^15.0.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
