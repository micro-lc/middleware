        "riderId": {
          "label": "Rider",
          "type": "string",
          "format": "lookup",
          "excludeFromSearch": false,
          "lookupOptions": {
            "lookupDataSource": "riders",
            "lookupValue": "_id",
            "lookupFields": [
              "name",
              "surname"
