          "visualizationOptions": {
            "joinDelimiter": "; "
          },
          "lookupOptions": {
            "lookupDataSource": "dishes",
            "lookupValue": "_id",
            "lookupFields": [
              "name"
            ]
          }
        },
        "totalPrice": {
          "label": {
            "it": "Prezzo",
            "en": "Price"
