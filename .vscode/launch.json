  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "debug server",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "ts-node",
        "${workspaceFolder}/scripts/debug-lc39.ts",
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug tests",
      "env": {
        "TS_NODE_COMPILER_OPTIONS": "{\"module\": \"CommonJS\"}"
      },
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "mocha",
        "${relativeFile}",
      ],
      "console": "integratedTerminal"
    }
  ]
}